@import "../css/colors.styl"
.about-me
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden

  &__left-panel
    position absolute
    top 0
    right 80px
    bottom 0
    left 0
    overflow hidden
    background-color c-pink
    color c-white

    > *
      z-index 2

  &__poopan
    position absolute
    bottom 0
    left 0
    opacity 0.1
    z-index 1
    font-size 320px
    font-weight bold
    line-height 150px

  &__side-bar
    position absolute
    top 0
    right 0
    bottom 0
    width 100px

  &__introduction
    position absolute
    right -50px
    top 20%
    color white
    opacity 0.1

  &__prev-navigator
    position absolute
    bottom 10px
    left 26px
