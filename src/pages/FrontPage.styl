.front-page
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  background-image url('./frontpage-bg.jpeg')
  background-repeat no-repeat
  background-position center center
  background-size 100% 100%

  @media screen and (max-width: 600px)
    background-size cover

  &__center
    display flex
    width 100%
    height 100%
    align-items center
    justify-content center
