@import "../css/colors.styl"

small-screen-break-point = 950px

.cv
  width 100%
  height 100%
  padding 50px 0px
  display flex
  justify-content center
  flex-wrap wrap
  font-size 14px

  &__about-me-bg
    width 315px
    height 100%
    padding-bottom 20px
    background-color c-white

  &__image
    width 315px

  &__header
    font-size 30px
    font-weight bold
    text-align center
    margin-top: -5px;
    padding: 15px 0px 10px 0px;
    border-bottom: 1px solid #fff;
    background-color: #f2527a;
    color: #fff;

  &__about-me-description
    font-family 'Montserrat', sans-serif
    letter-spacing normal

    &.--emphasize
      font-size 16px

  &__main
    margin-left 30px

  &__main-block-spacing
    width 30px
    height 30px

  &__work-experiences, &__skills
    max-width 590px
    font-size 20px

  &__work-experiences-text, &__skills-text
    margin-top 3px
    margin-left 10px

  &__work-experiences-header, &__skills-header
    font-size 26px
    font-weight bold
    margin-bottom 20px

  &__work-experiences-title, &__skill-items
    padding-top 5px
    color c-pink

  &__work-experiences-company
    font-size 16px
    padding-left: 5px

@media screen and (max-width: small-screen-break-point)
  .cv
    padding 0px

    &__about-me-bg
      width 100%

    &__image
      position relative
      left 50%
      transform translate(-50%, 0)

    &__main
      margin 0px

    &__main-block-spacing
      display none

    &__work-experiences, &__skills
      max-width 100%
