@import "../css/colors.styl"

.work-experiences
  position absolute
  top 20px
  right 0
  bottom 20px
  left 0
  overflow hidden
  background-color c-white
  display flex
  justify-content center
  align-items center

  &__header
    margin 120px 0px 20px 0px
    font-size 32px
    color c-dark-gray
    opacity 0.64

  &__center
    width 100%
    height 100%
    box-sizing border-box
    padding-left 115px

  &__slides-show
    width 90%
    height 350px
    margin 0px 40px
    border 1px dashed #333
    overflow hidden
    box-sizing border-box

  &__cv-button
    position absolute
    bottom 40px

  &__menu
    position absolute
    top 40px
    right 40px

  &__next-navigator
    position absolute
    top 40%
    left 100px

  &__paper-border
    position absolute
    right 0
    bottom 0
    border-left 327px solid transparent
    border-right 327px solid c-pink
    border-top 190px solid transparent
