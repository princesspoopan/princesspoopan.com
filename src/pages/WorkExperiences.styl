@import "../css/colors.styl"

.work-experiences
  position absolute
  top 20px
  right 0
  bottom 20px
  left 0
  overflow hidden
  background-color c-white
  display flex
  justify-content center
  align-items center

  &__header
    margin-bottom 20px
    font-size 32px
    color c-dark-gray
    opacity 0.64

  &__center
    width 100%
    height 100%
    box-sizing border-box
    padding 100px 0px 0px 115px
    z-index 2

  &__cv-button
    position absolute
    bottom 40px

  &__menu
    position absolute
    top 40px
    right 40px

  &__slide
    display flex

  &__images-wrapper
    flex-basis 55%

  &__jobs
    flex-basis 45%
    margin-left 20px

    > *
      margin-bottom 20px

    > *:nth-last-child(1)
      margin-bottom 0px

  &__screenshot
    width 100%
    height 100%

  &__next-navigator
    position absolute
    top 40%
    left 100px

  &__paper-border
    position absolute
    right 0
    bottom 0
    border-left 327px solid transparent__screenshot
    border-right 327px solid c-pink
    border-top 190px solid transparent
