@import "../css/colors.styl"

.app-layout
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden

  &__flash
    position absolute
    top 0
    right 0
    left 0
    height 20px
    font-family 'RobotoSlab'
    text-align center
    background-color pink
    color c-gray
    font-size 12px

  &__body
    position absolute
    top 20px
    right 100px
    bottom 0
    left 0
    overflow hidden

  &__side-bar
    position absolute
    top 20px
    right 0
    bottom 0
    width 100px

  &__navigator
    position absolute
    bottom 15px
    left 10px
