@import "../css/colors.styl"

.carousel
  width 300px
  height 300px
  cursor pointer

  &__item
    width 100%
    height 100%
    position absolute

    &.--fade-in
      opacity 0
      animation fade-in 3s forwards

    &.--fade-out
      opacity 1
      animation fade-out 3s forwards


@keyframes fade-in {
  100% {
    opacity 1
  }
}

@keyframes fade-out {
  100% {
    opacity 0
  }
}
