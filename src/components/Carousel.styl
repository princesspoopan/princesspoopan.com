@import "../css/colors.styl"

.carousel
  width auto
  height auto
  
  &__item
    cursor pointer

    &.--fade-in
      opacity 0
      animation fade-in 3s forwards

    &.--fade-out
      opacity 1
      animation fade-out 3s forwards


@keyframes fade-in {
  100% {
    opacity 1
  }
}

@keyframes fade-out {
  100% {
    opacity 0
  }
}
