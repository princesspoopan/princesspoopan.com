@import "../style/animation.styl"

gradient-bg()
  background linear-gradient(330deg, #27a6d8 14%,#fc558b 51%,#27a6d8 100%)

.about-me
  padding 30px
  position absolute
  top 20px
  right 0
  bottom 20px
  left 0
  background-color rgba(255, 255, 255, 0.6)
  box-sizing border-box
  font-family 'Source Code Pro', monospace
  color #008289

  &__body
    display flex

  .\\--special-text
    gradient-bg()
    -webkit-background-clip text
    -webkit-text-fill-color transparent
    font-weight 800
    text-shadow 1px 1px 5px light-gray
    font-size 26px
    white-space nowrap
    cursor pointer

    &:hover
      animation neon-pink 3s ease infinite

  &__summary
    margin-top 45px

  &__icon
    vertical-align middle

  &__text
    display inline-block
    vertical-align middle
    height inherit
    margin-left 20px
    text-align center
    cursor pointer

  &__name
    font-family 'League Script', monospace
    font-size 36px
    font-weight 800
    color #f2527a
    text-shadow 1vw 1vw 3vw #f2527a
    animation neon-pink 3s ease infinite

  &__code-name
    font-size 20px
    font-weight 500
    line-height 24px

  &__avatar
    border 2px dashed #fff
    height 60vh
    border-radius 10px
    box-shadow 2px 2px 20px #382807
    animation swing ease-in-out 1.5s infinite alternate

    &:hover
      animation-play-state paused

  &__principle
    font-size 20px
    margin-right 20px
    line-height 36px

  &__portals
    display flex
    align-items baseline

  &__link
    color #0977a3
    display inline-block
    margin-left 8px
    align-items baseline

    img
      width 25px
      height 25px
      cursor pointer

    img:hover
      box-sizing border-box
      border 2px solid #fff
      border-radius 50%
      animation spin 1s infinite linear

  &__buttons
    margin-top 30px

  &__button
    margin-right 50px
    padding 10px
    color #f0e7d8
    text-decoration none
    gradient-bg()
    border-radius 10px
    box-shadow 2px 2px 3px #9e9e9e
    cursor pointer

    &:active
      box-shadow none

  &__footer
    position absolute
    left 0
    right 0
    bottom 0
    background-color rgba(255, 255, 255, 0.65)
    padding 8px 0px
    display flex
    align-items center
    justify-content center
    font-size 12px

    a
      margin-left 10px

    img
      height 25px
