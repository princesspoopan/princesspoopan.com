@import "../style/animation.styl"

responsive-tablet-breakpoint = 750px
responsive-mobile-breakpoint = 450px

gradient-bg()
  background linear-gradient(330deg, #27a6d8 14%,#fc558b 51%,#27a6d8 100%)

.about-me
  padding 50px
  position absolute
  top 50px
  right 0
  bottom 30px
  left 0
  display flex
  flex-direction column
  justify-content center
  background-color rgba(255, 255, 255, 0.7)
  box-sizing border-box
  font-family 'Source Code Pro', monospace
  color #008289
  font-weight 600

  @media screen and (max-width: responsive-tablet-breakpoint)
    padding 20px

  &__header
    display flex
    align-items baseline

  &__link
    color #0977a3
    display inline-block
    margin-left 8px
    align-items baseline
    cursor pointer

    img
      width 30px
      height 30px

  &__name
    font-size 36px
    font-weight 800

    @media screen and (max-width: responsive-tablet-breakpoint)
      font-size 24px

  &__portals
    display flex
    align-items baseline
    justify-content center
    align-items center
    margin-left 10px

    @media screen and (max-width: responsive-tablet-breakpoint)
      margin-left 0px
      margin-top 5px

  &__summary
    margin 45px 0px
    font-size 20px
    line-height 36px

    @media screen and (max-width: responsive-tablet-breakpoint)
      font-size 15px


  &__buttons
    display flex

    @media screen and (max-width: responsive-mobile-breakpoint)
      justify-content space-between

  &__button
    margin-right 50px
    padding 10px
    background-color #008289
    color #f0e7d8
    text-decoration none
    white-space nowrap
    border-radius 5px
    box-shadow 2px 2px 3px #9e9e9e
    cursor pointer

    > span
      vertical-align middle

    &.--attention
      animation blink 2s infinite ease-in

    &.--with-image
      white-space nowrap
      background-color #f0e7d8
      color #008289

      img
        width 20px
        height 20px
        display inline-block
        vertical-align middle
        padding-right 5px


    @media screen and (max-width: responsive-tablet-breakpoint)
      margin-bottom 20px
      padding 8px
      font-size 10px

    @media screen and (max-width: responsive-mobile-breakpoint)
      margin-right 0px

    &:hover
      font-weight 800

    &:active
      box-shadow none

@keyframes blink {
  0%, 100% {
    box-shadow 2px 2px 3px #9e9e9e
  }

  50% {
    box-shadow 5px 5px 10px #17979e, -2px -2px 15px #17979e
  }
}
