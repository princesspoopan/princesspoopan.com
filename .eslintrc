{
  "extends": [ "standard", "plugin:react/recommended" ],
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "import/no-webpack-loader-syntax": 0,

    "no-cond-assign": [2, "always"],

    "no-console": 1,
  },
  "plugins": [ "react" ],
  "env": {
    "node": true,
    "mocha": true
  }
}
